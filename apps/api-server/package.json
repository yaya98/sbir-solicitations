{
  "name": "@repo/api-server",
  "version": "0.1.1",
  "main": "./dist/server.js",
  "types": "./dist/types.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/server.ts --bundle --platform=node --outfile=bundle/server.js",
    "dev": "concurrently \"tsc --watch --preserveWatchOutput\" \"tsx watch --clear-screen=false src/server.ts\"",
    "start": "node dist/server.js"
  },
  "files": [
    "dist/**"
  ],
  "dependencies": {
    "@repo/database": "workspace:*",
    "@trpc/server": "11.0.0-rc.477",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "~0.41.0",
    "express": "^4.21.2",
    "pg": "^8.15.6",
    "superjson": "^2.2.1",
    "ts-pattern": "^5.6.2",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.14",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "tsx": "^4.19.3",
    "typescript": "5.2.2"
  }
}
